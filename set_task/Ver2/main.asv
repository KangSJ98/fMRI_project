clear all; 
genDir = pwd;
cd(genDir); addpath(genpath(genDir))

opt = initiate();
while ~opt.expDone
    
    [opt,data] = trialReset(opt);
    [opt,data] = phase1(opt,data);
    [opt,data] = phase2(opt,data);
    [opt,data] = phase3(opt,data);
    [opt,data] = phase4(opt,data);
    
    opt = saveData(opt,data);
    
end